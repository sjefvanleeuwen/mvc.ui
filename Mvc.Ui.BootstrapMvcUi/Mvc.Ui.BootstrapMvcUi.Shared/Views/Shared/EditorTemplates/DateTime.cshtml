@using System
@using Mvc.Ui.BootstrapMvcUi
@model System.DateTime?
<div class='input-group date' id='@Html.IdFor(m => m)'>
    @Html.TextBoxFor(m => m, new { @class = "form-control input", data_date_format = "DD/MM/YYYY HH:mm:ss",/* @readonly = "readonly" */})
    <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></span>
</div>
@using (Html.BeginScripts())
{
    <script type="text/javascript">
        $(function() {
            $('#@Html.IdFor(m => m)').datetimepicker({
                pickDate: true,
                minuteStepping: 15,
                format: 'HH:mm:ss',
                pickTime: true,
                language: 'nl',
                use24hours: true,
                clear: true
            });
        });
    </script>
}