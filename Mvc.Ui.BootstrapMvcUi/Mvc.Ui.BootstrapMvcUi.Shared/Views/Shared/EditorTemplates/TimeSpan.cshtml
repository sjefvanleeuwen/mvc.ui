@using Mvc.Ui.BootstrapMvcUi
@model System.TimeSpan?
<div class='input-group date' id='@Html.IdFor(m => m)'>
    @Html.TextBoxFor(m=>m, new { @class = "form-control input", data_date_format="HH:mm:ss",/*@readonly="readonly"*/ })
    <span class="input-group-addon"><span class="glyphicon glyphicon-time"></span>
    </span>
</div>
@using (Html.BeginScripts())
{
    <script type="text/javascript">
        $(function() {
            $('#@Html.IdFor(m => m)').datetimepicker({
                pickDate: false,
                minuteStepping: 5,
                format: 'HH:mm:ss',
                pickTime: true,
                language: 'nl',
                use24hours: true,
                clear: true
            });
        });
    </script>
}